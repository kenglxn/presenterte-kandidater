{
    "private": true,
    "sideEffects": false,
    "scripts": {
        "build": "remix build && run-p build:server",
        "build:server": "tsc --project server/tsconfig.json",
        "dev": "remix build && run-p \"dev:*\"",
        "dev:node": "cross-env NODE_ENV=development nodemon ./server/server.ts --watch ./server/server.ts",
        "dev:remix": "remix watch",
        "dev:ts": "tsc --watch",
        "start": "cross-env NODE_ENV=production ts-node ./server/server.ts",
        "format": "prettier --write .",
        "prepare": "husky install"
    },
    "dependencies": {
        "@navikt/bedriftsmeny": "^6.1.0",
        "@navikt/ds-css": "^2.0.4",
        "@navikt/ds-icons": "^2.0.4",
        "@navikt/ds-react": "^2.0.4",
        "@navikt/nav-dekoratoren-moduler": "^1.8.1",
        "@remix-run/express": "^1.7.6",
        "@remix-run/node": "^1.7.6",
        "@remix-run/react": "^1.7.6",
        "@types/http-proxy-middleware": "^1.0.0",
        "compression": "^1.7.4",
        "cross-env": "^7.0.3",
        "express": "^4.18.1",
        "fuzzysort": "^2.0.4",
        "html-react-parser": "^3.0.4",
        "http-proxy-middleware": "^2.0.6",
        "isbot": "^3.6.5",
        "load-js": "^3.0.3",
        "openid-client": "^5.3.0",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "winston": "^3.8.2"
    },
    "devDependencies": {
        "@remix-run/dev": "^1.7.6",
        "@remix-run/eslint-config": "^1.7.6",
        "@types/compression": "^1.7.2",
        "@types/express": "^4.17.14",
        "@types/jsdom": "^20.0.1",
        "@types/react": "^18.0.25",
        "@types/react-dom": "^18.0.9",
        "@types/react-modal": "^3.13.1",
        "eslint": "^8.28.0",
        "husky": "^8.0.2",
        "msw": "^0.49.0",
        "nodemon": "^2.0.19",
        "npm-run-all": "^4.1.5",
        "pretty-quick": "^3.1.3",
        "ts-node": "^10.9.1",
        "typescript": "^4.9.3"
    },
    "engines": {
        "node": ">=14"
    },
    "prettier": {
        "tabWidth": 4,
        "trailingComma": "es5",
        "arrowParens": "always",
        "printWidth": 100
    },
    "msw": {
        "workerDirectory": "public"
    }
}
